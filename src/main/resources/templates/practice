<body>
    <div class="container">
        <h1>Cart Items</h1>
 
        <!-- If cart exists and has items -->
        <div th:if="${cart != null and #maps.size(cart.items) > 0}">
            
            <div th:each="cartItemEntry : ${cart.items}">
                <div class="Cart-Item">
                    <h3>Item ID: <span th:text="${cartItemEntry.value.itemId}"></span></h3>
                    <h3>Item Name: <span th:text="${cartItemEntry.value.itemName}"></span></h3>
                    <h3>Price: <span th:text="${cartItemEntry.value.price}"></span></h3>
                    
                    <form th:action="@{/cart}" method="post">
                        <input type="hidden" name="itemId" th:value="${cartItemEntry.value.itemId}">
                        Quantity: <input type="number" name="quantity" th:value="${cartItemEntry.value.quantity}" min="1">
                        <input type="submit" name="action" value="update">
                        <input type="submit" name="action" value="delete">
                    </form>
                    
                    <h3>Subtotal: <span th:text="${cartItemEntry.value.subTotal}"></span></h3>
                </div>
            </div>
 
            <a href="menu.html">Add more items</a>
            <form th:action="@{/checkout}" method="get">
                <center><input type="submit" value="Proceed To Pay" class="proceed-to-pay"></center>
            </form>
        </div>
 
        <!-- If cart is empty -->
        <div th:if="${cart == null or #maps.isEmpty(cart.items)}" class="empty-cart">
            Your cart is empty.
        </div>
 
    </div>
